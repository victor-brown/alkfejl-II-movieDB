{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/__tests__/**",
        "packages/*/test/**",
        "packages/*/dist/**"
      ]
    }
  }
}
