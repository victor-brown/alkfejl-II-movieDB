{
  "version": "0.0.6",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-config": "^1.0.2",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "typescript": "^4.9.5"
  },
  "name": "alkfelj2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start-db": "docker-compose start",
    "stop-db": "docker-compose stop",
    "predev": "npm run start-db",
    "dev": "lerna run dev",
    "start": "lerna run start",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "prepare": "husky install",
    "generate-changelog": "npx conventional-changelog -i CHANGELOG.md --same-file",
    "bump:patch": "npx lerna version 'patch' --exact --conventional-commits -y --no-push",
    "bump:minor": "npx lerna version 'minor' --exact --conventional-commits -y --no-push",
    "bump:major": "npx lerna version 'major' --exact --conventional-commits -y --no-push",
    "release": "node ./release.js",
    "clean": "npx lerna clean -y",
    "prebootstrap": "npm run clean",
    "bootstrap": "npx lerna bootstrap ",
    "postbootstrap": "docker-compose up --no-start",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
